{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es2015",
        "module": "commonjs",
        "lib": ["es2015", "es2016", "es2017", "dom", "esnext.asynciterable"],
        "types": ["node", "jest"],
        "strict": true,
        "sourceMap": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declarationDir": "lib",
        "outDir": "lib",
        "esModuleInterop": true,
        "noEmit": true,
        "typeRoots": [
            "./src/types"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "src/__fixtures__/**/*",
        "src/__snapshots__/**/*"
    ]
}
