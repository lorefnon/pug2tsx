{
    "name": "pug2tsx",
    "version": "1.1.0",
    "description": "Compile pug templates to tsx",
    "bugs": "https://github.com/lorefnon/pug2tsx/issues",
    "main": "lib/index.js",
    "source": "src/index.ts",
    "repository": "https://github.com/lorefnon/pug2tsx",
    "author": "lorefnon <lorefnon@gmail.com> (https://lorefnon.me)",
    "license": "MIT",
    "private": false,
    "files": [
        "lib",
        "docs"
    ],
    "bin": {
        "pug2tsx": "./lib/cli.js"
    },
    "keywords": [
        "pug",
        "jade",
        "template",
        "react",
        "ui",
        "component",
        "typescript"
    ],
    "scripts": {
        "release": "release-it",
        "prebuild": "yarn run clean",
        "prepublishOnly": "cross-env NODE_ENV=production yarn run build",
        "format": "prettier --write \"src/**/*.ts\"",
        "build:ts": "babel src --out-dir lib --extensions .ts --source-maps",
        "watch:ts": "babel src --out-dir lib --extensions .ts --source-maps --watch",
        "check:ts": "yarn run build:ts && yarn run test",
        "clean": "rimraf lib",
        "build": "yarn run build:ts",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:prod": "yarn run lint && yarn run test -- --no-cache"
    },
    "jest": {
        "transform": {
            ".(ts|tsx)": "ts-jest"
        },
        "testEnvironment": "node",
        "testRegex": "\\.spec\\.ts$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "coveragePathIgnorePatterns": [
            "/node_modules/",
            "/test/"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 90,
                "functions": 95,
                "lines": 95,
                "statements": 95
            }
        },
        "collectCoverage": false,
        "collectCoverageFrom": [
            "src/*.ts"
        ]
    },
    "devDependencies": {
        "@babel/cli": "^7.19.3",
        "@babel/plugin-proposal-class-properties": "^7.18.6",
        "@babel/preset-env": "^7.20.2",
        "@babel/preset-typescript": "^7.18.6",
        "@babel/types": "^7.20.2",
        "@types/babel__template": "^7.4.1",
        "@types/chalk": "^2.2.0",
        "@types/debug": "^4.1.7",
        "@types/dedent": "^0.7.0",
        "@types/fs-extra": "^9.0.13",
        "@types/glob": "^8.0.0",
        "@types/jest": "^29.2.3",
        "@types/lodash": "^4.14.189",
        "@types/minimist": "^1.2.2",
        "@types/node": "^18.11.9",
        "@types/prettier": "^2.7.1",
        "cross-env": "^7.0.3",
        "jest": "^29.3.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "reflect-metadata": "^0.1.13",
        "release-it": "^15.5.0",
        "ts-jest": "^29.0.3",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.3"
    },
    "dependencies": {
        "@babel/core": "^7.20.2",
        "@babel/generator": "^7.20.4",
        "@babel/node": "^7.20.2",
        "@babel/parser": "^7.20.3",
        "@babel/template": "^7.18.10",
        "@babel/types": "^7.20.2",
        "@types/babel__generator": "^7.6.4",
        "chokidar": "^3.5.3",
        "debug": "^4.3.4",
        "dedent": "^0.7.0",
        "fs-extra": "^10.1.0",
        "glob": "^8.0.3",
        "lodash": "^4.17.21",
        "minimist": "^1.2.7",
        "prettier": "^2.8.0",
        "pug-error": "^2.0.0",
        "pug-lexer": "^5.0.1",
        "pug-parser": "^6.0.0"
    },
    "peerDependencies": {
        "react": "*",
        "typescript": "^4.9.3"
    },
    "resolutions": {
        "@babel/types": "^7.20.2"
    }
}
